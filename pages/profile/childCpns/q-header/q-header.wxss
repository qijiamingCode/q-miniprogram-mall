/* pages/profile/childCpns/q-header/q-header.wxss */
.header {
  display: flex;
  background-color: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx; 
  color:#fff;
  position: relative;
}

.avatar image {
  width: 140rpx;
  height: 140rpx;
  vertical-align: middle;
  border: 1px solid #eee;
  border-radius: 50px;
  background: #f2f2f2;
}

.phone image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.arrow image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.logo-info {
  vertical-align: middle;
  margin-left: 30rpx;
}
.logo-info .login {
  font-size: 36rpx;
  margin-top: 18rpx;
}

.logo-info .phone {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.arrow {
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}