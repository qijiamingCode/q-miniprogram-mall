/* pages/detail/childCpns/q-shop-info/q-shop-info.wxss */
.shop-info {
  border-bottom: 12rpx solid #f2f2f2;
  padding: 16rpx 16rpx 50rpx;
}

.shop-title {
  margin-top: 30rpx;
}

.shop-info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 46rpx;
  border: 1px solid rgba(200,200,200,.6);
  vertical-align: middle;
}

.shop-info text {
    margin-left: 18rpx;
    position: relative;
    top: 6rpx;
}

.count-info {
  display: flex;
  margin: 20rpx 0;
  border-right: 1px solid rgba(200,200,200,.6);
}

.count-item {
  flex: 1;
  text-align: center;
}

.count-item .sell {
  font-size: 40rpx;
}

.count-item .text {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.sell-info {
  display: flex;
  margin: 40rpx 0;
}

.sell-item {
  flex: 1;
  text-align: center;
}

.grade-info {
  font-size: 28rpx;
  padding: 0 20rpx;
}

.grade-row {
  display: flex;
}

.grade-row .item {
  margin-top: 8rpx;
}

.grade-row .name {
  width: 200rpx;
}


.grade-row .better {
  flex: 1;
}

.grade-row .score {
  flex: 1;
}

.good {
  color: #ff5777;
}

.less {
  color: #5ea732;
}

.entrance {
  text-align: center;
}

.entrance button {
   padding: 8rpx 100rpx;
}

.entrance button::after {
  border: none;
}