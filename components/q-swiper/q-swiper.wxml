<!--components/q-swiper/q-swiper.wxml-->
<swiper class="swiper"
        indicator-dots
        indicator-active-color="#ff5777"
        autoplay
        interval="3000"
        duration="300"
        circular
        >
  <block wx:for='{{list}}' wx:key='index' >
    <swiper-item class='swiper-item' >
    <!-- 图片被压扁，用mode=widthFix -->
      <image src='{{item}}' mode="widthFix" ></image>
    </swiper-item>
  </block>
</swiper>

